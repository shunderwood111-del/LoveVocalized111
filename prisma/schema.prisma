// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CustomerEntitlement {
  id               String    @id @default(cuid())
  customerId       String    @unique        // Stripe Customer ID (e.g. cus_***)
  priceId          String                   // Stripe Price ID purchased
  planName         String                   // Human-friendly name of plan
  songsPerYear     Int                      // Allowance
  revisionsPerSong Int                      // Allowance
  commercial       Boolean                  // Commercial usage flag
  renewsAt         DateTime?                // Next renewal (if subscription)
  songsUsed        Int       @default(0)    // Consumption counter

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@index([customerId])
}

model SongJob {
  id          String   @id @default(cuid())
  customerId  String
  externalJob String   @unique            // ID from external job system
  status      String   @default("pending") // pending | preparing | running | succeeded | failed
  consumed    Boolean  @default(false)    // whether usage has been decremented
  prompt      String?
  resultUrl   String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([customerId])
}
