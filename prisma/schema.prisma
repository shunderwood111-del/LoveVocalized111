// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CustomerEntitlement {
  id               String    @id @default(cuid())
  customerId       String    @unique // Stripe Customer ID (e.g. cus_***)
  priceId          String // Stripe Price ID purchased
  planName         String // Human-friendly name of plan
  songsPerYear     Int // Allowance
  revisionsPerSong Int // Allowance
  commercial       Boolean // Commercial usage flag
  renewsAt         DateTime? // Next renewal (if subscription)
  songsUsed        Int       @default(0) // Consumption counter

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
}

model SongJob {
  id          String  @id @default(cuid())
  customerId  String
  externalJob String  @unique
  status      String  @default("pending") // keep as-is for now
  consumed    Boolean @default(false)
  prompt      String?

  // NEW: store a permanent storage key (e.g., "songs/<customerId>/<jobId>.mp3")
  storageKey  String? // <- use this going forward
  mime        String? // e.g., "audio/mpeg"
  durationSec Int?

  // (legacy) temporary/signed URL from generator â€” will stop using later
  resultUrl String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([customerId])
}
